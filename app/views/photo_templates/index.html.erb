<h1>List of photos</h1>
  <div>
    <form action="/add_photo" method="post"> 
      <label for="my_photo">Image</label>
      <input id="my_photo" type="text" name="query_photo" placeholder="Enter a URL for the image." >
      
      <label for="my_caption">Caption</label>
      <textarea id="caption" type="text" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

      <label for="owner">Owner ID</label>
      <input id="owner" type="text" name="query_owner_id" placeholder="Enter an ID of a User">

      <button>
        Add photo
      </button>

    </form>
  </div>
<hr>
<table border="1">
  <tr>
    <th>
      Image
    </th>
    
    <th>
      Caption
    </th>

    <th>
      Owner
    </th>

    <th>
      Posted
    </th>

    <th>

    </th>
  </tr>

  <% @photos_list.each do |a_photo| %>
    <tr>
      <td>
        <img src="<%= a_photo.image %>">
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
        <%= a_photo.created_at %>
      </td>

      <td>
        <a href="photos/<%= a_photo.id %>">Show details</a>
      </td>
      
    </tr>
  <% end %>
</table>
