<h1>List of users</h1>

<div>
  <form action="/create" method="post">
    <label for="browser_username">Username</label>
    <input id="browser_username" type="text" name="query_username" placeholder="Enter a username...">

    <button>Add user</button>
  </form>
</div>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>

    </th>
  </tr>
    <% @users_list.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>
        
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <a href="/users/<%= a_user.username %>">Show details</a>
        </td>
    <% end%>
</table>
